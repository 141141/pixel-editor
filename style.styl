html, body
  margin: 0
  height: 100%

.editor
  background-color: lightgray
  box-sizing: border-box
  height: 100%
  padding: 0 40px
  position: relative
  user-select: none
  overflow: hidden

.toolbar
  background-color: white
  box-sizing: border-box
  height: 100%
  width: 40px
  position: absolute
  top: 0
  left: 0

  .tool
    background-color: lightgray
    background-position: center
    background-repeat: no-repeat
    width: 36px
    height: 36px
    box-sizing: border-box
    border: 1px solid rgba(0, 0, 0, 0.5)
    border-radius: 2px
    margin: 2px

    &.active
      background-color: white
      border-color: green

.palette
  background-color: white
  box-sizing: border-box
  height: 100%
  width: 40px
  position: absolute
  top: 0
  right: 0
  font-size: 0

  .color
    box-sizing: border-box
    border: 1px solid rgba(0, 0, 0, 0.5)
    border-radius: 2px
    float: left
    width: 16px
    height: 16px
    margin: 2px

    &.current
      float: none
      width: 36px
      height: 36px

.viewport
  background-color: white
  border: 1px solid gray
  height: 320px
  width: 320px
  
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

  canvas
    background-color: transparent
    position: absolute

.debug
  background-color: white
  box-sizing: border-box
  position: absolute
  width: 100%
  height: 100px
  bottom: 0
  margin: 0
  padding: 1em
