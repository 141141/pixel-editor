html, body
  margin: 0
  height: 100%
  font-family: helvetica

.editor
  background-color: lightgray
  box-sizing: border-box
  height: 100%
  padding: 0px 40px 64px 40px
  position: relative
  user-select: none
  overflow: hidden

  .main
    font-size: 0
    height: 100%
    position: relative
    overflow: auto

    .thumbnail
      background-color: white
      border: 1px solid rgba(0, 0, 0, 0.5)
      position: absolute
      top: 0
      left: 0

.notifications
  background-color: rgba(0, 0, 0, 0.5)
  border: 1px solid black
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px
  color: white
  left: 40px
  padding: 4px
  position: absolute
  top: 0

  &:empty
    padding: 0
    border: none

  p
    margin: 0
    margin-bottom: 0.25em

    &:last-child
      margin-bottom: 0

.toolbar
  box-sizing: border-box
  height: 100%
  width: 40px
  position: absolute
  top: 0
  left: 0

  h2
    font-size: 12px

  .tool
    background-position: center
    background-repeat: no-repeat
    width: 36px
    height: 36px
    box-sizing: border-box
    border: 1px solid rgba(0, 0, 0, 0.5)
    border-top: none

    &:last-child
      border-bottom-right-radius: 4px

    &.active
      background-color: #FFF

  .tools:not(:first-child)
    .tool
      &:first-child
        border-top: 1px solid rgba(0, 0, 0, 0.5)
        border-top-right-radius: 4px

.layers
  box-sizing: border-box
  font-size: 14px
  height: 100%
  width: 40px
  position: absolute
  top: 0
  right: 0

  .layer
    padding: 8px 0 2px
    position: relative

    &.active
      canvas
        border-color: green

    &.hidden
      opacity: 0.5

    .eye
      position: absolute
      top: 0
      right: 0
      width: 16px
      height: 16px
      background-image: url(data:image/png;base64,)

  canvas
    box-sizing: border-box
    border: 1px solid lightgray
    display: block
    margin: auto

.palette
  box-sizing: border-box
  height: 100%
  width: 40px
  position: absolute
  top: 0
  right: 0
  font-size: 0

  .color
    box-sizing: border-box
    border: 2px solid rgba(0, 0, 0, 0)
    width: 40px
    height: 16px
    margin: 0px

    &.active
      border: 2px solid rgba(255, 255, 255, 0.5)

    &.current
      width: 40px
      height: 40px

.vertical-center
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.viewport
  background-color: white
  background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAKUlEQVQ4T2NkIADOnDnzH58SxlEDGIZDGBCKZxMTE7zeZBw1gGEYhAEAJQ47KemVQJ8AAAAASUVORK5CYII=)
  border: 1px solid gray
  margin: auto

  canvas
    background-color: transparent
    position: absolute

  .overlay
    pointer-events: none
    position: absolute
    z-index: 1

.debug
  background-color: white
  box-sizing: border-box
  position: absolute
  width: 100%
  height: 100px
  bottom: 0
  margin: 0
  padding: 1em

.actions
  box-sizing: border-box
  width: 100%
  height: 64px
  position: absolute
  bottom: 0
  left: 0

  .action
    width: 64px
    height: 64px

    background-color: #EEE
    background-position: center
    background-repeat: no-repeat
    box-sizing: border-box
    border: 1px solid rgba(0, 0, 0, 0.5)
    border-left: none
    display: inline-block
    font-size: 12px
    position: relative
    vertical-align: top

    &:last-child
      border-top-right-radius: 4px

    .text
      text-align: center
      white-space: nowrap
      overflow: hidden
      position: absolute
      width: 100%

      top: 0

      &:last-child
        top: auto
        bottom: 0

#modal
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  position: absolute
  z-index: 9000
  top: 0

  input[type=file]
    box-sizing: border-box
    padding: 5em 2em
    width: 320px
    height: 180px

  & > *
    background-color: white
    border: 1px solid black
    margin: auto
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

  &.active
    display: block
    width: 100%
    height: 100%
